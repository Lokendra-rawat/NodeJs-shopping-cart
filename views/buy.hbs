<div class="row grid-x" style="display: flex; flex-wrap: wrap;">

  <div class="bordr pad large-4 medium-5 small-12">
    <h3>Buy This Product</h3>
    <figure class="clearfix">
      <img style="max-height: 390px" class="flat-left" src="../../images/{{ pro.image }}">
      <figcaption class="flat-left">
        <h5>{{ pro.name }}</h5>
        <h6>${{ pro.price }}</h6>
      </figcaption>
    </figure>
  </div>

  <div class="bordr pad large-8 medium-7 small-12">
    <h4> Product Description</h4>
    <hr>
    <p>{{ pro.description }}</p><br>
    <div style="padding:0" class=" large-3 medium-4 small-5">
      <label>Select Size</label>
      <select>
        <option value="husker">M</option>
        <option value="starbuck">L</option>
        <option value="hotdog">XL</option>
        <option value="apollo">XXL</option>
      </select>
    </div>
    <h6> <b> Price :</b> {{ pro.price }}</h6>
    <h6> <b> Discount :</b> {{ pro.discount }}% </h6>
    <h6> <b> Quantity : </b> {{ pro.quantity }} Items Left</h6>
    <h6> <b> Payable Amount :</b> {{ pro.pa }}</h6>
    <div class="clearfix">
      <button class="button primary"> Add to Cart </button>
      <span class="large-4"> </span>
      <button class="button float-right"> Place Order </button>
    </div>
  </div>

</div>


<div class="row pad ">
  <div>
    <h2> Similar Products </h2>
    <hr> {{>content }}
  </div>
</div>

